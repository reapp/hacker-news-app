{
  "author": "Nate Wienert",
  "name": "reapp-hn",
  "description": "A reapp example app, for reading Hacker News",
  "version": "1.0.0",
  "main": "./app/app.jsx",
  "scripts": {
    "test": "mocha -R spec tests/**-test.js",
    "test-watch": "mocha -G -w -R min tests/**-test.js",
    "dev-server": "node server.js --config config.dev.js --dev --progress --colors",
    "hot-server": "node server.js --config config.hot.js --dev --hot --progress --colors",
    "iso-server": "node server.js --debug",
    "build": "webpack --config webpack/config.production.js --progress --profile --colors --debug --display-error-details --verbose --display-modules",
    "start": "node server.js"
  },
  "dependencies": {
    "react": "~0.12",
    "immutable": "^3.3.0",
    "fynx": "~1.3.2",
    "bluebird": "~2.3.11",
    "omniscient": "~2.1.0",
    "reapp-platform": "*",
    "reapp-ui": "*",
    "reapp-routes": "~0.9.0",
    "react-router": "~0.11.6"
  },
  "devDependencies": {
    "react-hot-loader": "~1.0.4",
    "webpack-dev-server": "~1.7.0"
  }
}
